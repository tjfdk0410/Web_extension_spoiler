{
  "name": "Spoiler Block",
  "version": "1.0",
  "manifest_version": 2,

  "description": "Block spoilers!",
  "icons": {
    "16": "images/icon128.png",
    "32": "images/icon128.png",
    "48": "images/icon128.png",
    "128": "images/icon128.png"
  },
 
  "browser_action": {
    "default_title": "main",
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "images/icon128.png",
      "32": "images/icon128.png",
      "48": "images/icon128.png",
      "128": "images/icon128.png"
    }
  },

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "content_scripts": [{
    "all_frames": true,
    "match_about_blank": true,
    "matches": ["<all_urls>"],
    "js": ["script.js"],
    "run_at": "document_idle"
  }],
  
  "permissions": [
    "storage",
    "unlimitedStorage",
    "notifications",
    "declarativeContent",
    "activeTab",
    "background",
    "https://*/*",
    "http://*/*",
    "<all_urls>",
    "tabs"
  ],
   
  "homepage_url" : "https://spoiler.org",
  
  "options_ui": {
    "page": "option/options.html"
  }
}
